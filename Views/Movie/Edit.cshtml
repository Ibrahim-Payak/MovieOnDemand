@model MovieOnDemand.Data.ViewModel.MovieVM;
@using MovieOnDemand.Data;

@{
    ViewData["Title"] = "Movie Update Page";
}

<br />
<h2 class="text-info text-center">Update Movie</h2>
<br />

<form method="post" class="col-md-8 offset-2">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CinemaId"></label>
                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas"></select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducerId"></label>
                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorIds"></label>
                <br />
                <small>*Use Ctrl button for selecting multiple Data</small>
                <select asp-for="ActorIds" class="form-control" multiple asp-items="ViewBag.Actors"></select>
                <span asp-validation-for="ActorIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieCategory"></label>
                <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                <span asp-validation-for="MovieCategory" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4 offset-4 text-center">
            <img id="ImagePreview" style="width:100%" />
        </div>
    </div>

    <div class="form-group">
        <a class="btn btn-secondary float-left" asp-action="Index"><i class="bi bi-card-list"></i> Show All</a>
        <button type="submit" class="btn btn-success float-right"><i class="bi bi-journal-check"></i> Update</button>
    </div>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            var out = document.getElementById('ImagePreview');
            out.src = $('#ImageUrl').val();
        });

        $('#ImageUrl').on('change', function () {
            var out = document.getElementById('ImagePreview');
            out.src = $(this).val();
        });
    </script>
}