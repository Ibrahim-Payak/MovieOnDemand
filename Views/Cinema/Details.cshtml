@model Cinema;

@{
    ViewData["Title"] = "Actor View Page";
}

<br />
<h2 class="text-info text-center">@Model.Name Details</h2>
<br />

<div class="col-6 offset-3">
    <div class="form-group text-center">
        <img id="CinemaLogoPreview" class="rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="CinemaLogo">Profile Picture URL</label>
        <input class="form-control disabled" asp-for="CinemaLogo">
    </div>
    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input class="form-control disabled" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control disabled" asp-for="Description">
    </div>
    <a class="btn btn-secondary float-left text-white" asp-action="Index"><i class="bi bi-card-list"></i> Show All</a>
    <a class="btn btn-success float-right text-white" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i> Edit</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $('#CinemaLogo').val();
        })
    </script>
}