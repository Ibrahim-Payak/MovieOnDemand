@model Cinema;

@{
    ViewData["Title"] = "Cinema Delete Page";
}

<br />
<h2 class="text-info text-center">Delete Record of @Model.Name</h2>
<br />

<div class="col-6 offset-3">
    <div class="form-group text-center">
        <img id="CinemaLogoPreview" class="rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="CinemaLogo">Cinema Logo URL</label>
        <input class="form-control disabled" asp-for="CinemaLogo">
    </div>
    <div class="form-group">
        <label asp-for="Name">Cinema Name</label>
        <input class="form-control disabled" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control disabled" asp-for="Description">
    </div>

    <div class="form-group">
        <a class="btn btn-secondary float-left text-white" asp-action="Index"><i class="bi bi-card-list"></i> Show All</a>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" class="btn btn-danger float-right" value="Confirm" />
        </form>
    </div>
</div>


@section Scripts{
<script>
    $(document).ready(function () {
        var output = document.getElementById('CinemaLogoPreview');
        output.src = $('#CinemaLogo').val();
    })
</script>
}