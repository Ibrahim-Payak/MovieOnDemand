@model Cinema;

@{
    ViewData["Title"] = "Cinema Edit Page";
}

<br />
<h2 class="text-info text-center">Update Cinema of @Model.Name</h2>
<br />

<form method="post" class="col-6 offset-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*to add profile picture preview*@
    <div class="form-group text-center">
        <img id="CinemaLogoPreview" class="rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="CinemaLogo">Profile Picture URL</label>
        <input class="form-control" asp-for="CinemaLogo">
        <span asp-validation-for="CinemaLogo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <a class="btn btn-secondary float-left" asp-controller="Actor" asp-action="Index"><i class="bi bi-card-list"></i> Show All</a>
    <button type="submit" class="btn btn-success float-right"><i class="bi bi-journal-check"></i> Update</button>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $('#CinemaLogo').val();
        })
    </script>
}