@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Actor Index";
}

<br />

<div>
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th class="align-items-center w-25">@Html.DisplayNameFor(m => m.Bio)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureUrl" alt="Actor-Image" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(m => item.FullName)</td>
                        <td class="align-middle">@Html.DisplayFor(m => item.Bio)</td>
                        <td class="align-middle">
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-info text-white" asp-action="View" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="float-right">
            <a asp-controller="Actor" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Actor</a>
        </div>
    </div>
</div>
