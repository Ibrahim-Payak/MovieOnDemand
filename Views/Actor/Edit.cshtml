@model Actor;

@{
    ViewData["Title"] = "Actor Edit Page";
}

<br />
<h2 class="text-info text-center">Update Actor of @Model.FullName</h2>
<br />

<form method="post" class="col-6 offset-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*to add profile picture preview*@
    <div class="form-group text-center">
        <img id="ProfilePicturePreview" class="rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="ProfilePictureUrl">Profile Picture URL</label>
        <input class="form-control" asp-for="ProfilePictureUrl">
        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input class="form-control" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <input class="form-control" asp-for="Bio">
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <a class="btn btn-outline-primary float-left" asp-controller="Actor" asp-action="Index">Show All</a>
    <button type="submit" class="btn btn-outline-success float-right">Update</button>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ProfilePictureUrl').val();
        })

        $('#ProfilePictureUrl').on('change', function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}