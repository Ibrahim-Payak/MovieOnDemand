@model Actor;

@{
    ViewData["Title"] = "Actor View Page";
}

<br />
<h2 class="text-info text-center">@Model.FullName Details</h2>
<br />

<div class="col-6 offset-3">
    <div class="form-group text-center">
        <img id="ProfilePicturePreview" class="rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="ProfilePictureUrl">Profile Picture URL</label>
        <input class="form-control disabled" asp-for="ProfilePictureUrl">
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input class="form-control disabled" asp-for="FullName">
    </div>
    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <input class="form-control disabled" asp-for="Bio">
    </div>
    <a class="btn btn-secondary float-left text-white" asp-action="Index"><i class="bi bi-card-list"></i> Show All</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a class="btn btn-success float-right text-white" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i> Edit</a>
    }
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ProfilePictureUrl').val();
        })
    </script>
}